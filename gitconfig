[user]
  name = Sasha Friedenberg
  email = sashafriedenberg@gmail.com
	signingkey = sashafriedenberg@gmail.com
[core]
  editor = vim
  whitespace = nowarn
  excludesfile = ~/.gitignore_global
[alias]
  aa = add --all --intent-to-add
  ap = add --patch
  br = branch
  brc = rev-parse --abbrev-ref HEAD
  ci = commit
  co = checkout
  cob = !git checkout -b $1 && git branch --set-upstream-to=origin/master
  com = checkout master
  diffs = diff --staged
  hi = log --pretty=nice
  hig = log --pretty=nice --graph
  him = log --pretty=nice origin/master..HEAD
  hist = log --graph --pretty=hist --abbrev-commit
  last = show HEAD
  last-branch = rev-parse --abbrev-ref @{-1}
  mergem = "!f() { \
      BRANCH_NAME=$(git branch --show-current) && \
      git checkout master && \
      git pull origin master && \
      git checkout \"$BRANCH_NAME\" && \
      git rebase master && \
      git push -f && \
      git checkout master && \
      git merge --ff-only \"$BRANCH_NAME\" && \
      git branch -D \"$BRANCH_NAME\"; \
    }; f"
  rebasem = rebase origin/master --interactive
  rebasemi = rebase origin/master --interactive
  show-rev = !git show -p stash@\\{\\$1\\}
  stash-show = "!f() { \
      git stash show 'stash@{$1}' -p; \
    }; f"
  stash-drop = "!f() { \
      git stash drop 'stash@{$1}'; \
    }; f"
  show-untracked = ls-files --others --exclude-standard
  st = status -sb
  su = submodule update --recursive --init
  unstage = reset HEAD --
[pretty]
  nice = format:%w(120,0,44)%C(auto)%h %<(14)%Cred%cr %<(18)%C(blue)%aN%Creset - %s%C(auto)%w(120,0,0)%+d
  hist = format:%C(auto)%h%Creset - %s %C(blue)[%aN] %Cgreen(%ad) %C(bold blue)%Creset%C(auto)%+d%Creset
[push]
  default = current
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[log]
  mailmap = true
[mergetool]
  prompt = false
  keepBackup = false
[merge]
  conflictstyle = diff3
  tool = vimdiff
[gpg]
  program = gpg2
[url "git@github.com:"]
	insteadOf = https://github.com/
[merge "ours"]
	driver = true
[pull]
	rebase = true
[commit]
	gpgsign = true
[advice]
	detachedHead = false
