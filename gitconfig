[core]
  editor = vim
  whitespace = nowarn
  excludesfile = ~/.gitignore_global
[alias]
  br = branch
  ci = commit
  co = checkout
  diffs = diff --staged
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(blue)[%aN] %Cgreen(%ad) %C(bold blue)%Creset' --abbrev-commit
  st = status -sb
  su = submodule update --recursive --init
[push]
  default = current
[pull]
  rebase = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[log]
  mailmap = true
